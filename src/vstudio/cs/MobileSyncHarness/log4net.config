<?xml version="1.0" encoding="utf-8" ?>
<configuration>

	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<log4net>
      
		<appender name="LogFileAppender" type="log4net.Appender.FileAppender">
			<param name="File" value="MobileSyncHarness.log" />       <!-- Log to MobileSyncHarness.log in the current working directory -->
			<param name="AppendToFile" value="true" />   <!-- false = Truncate & Create New Log File | true = Append To Exixting Log File -->
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%date [%-5level] [%logger] - %message%newline" />
			</layout> 			
		</appender>

		<appender name="DebugFileAppender" type="log4net.Appender.FileAppender">
			<param name="File" value="/Program Files/ZimbraQA/TestLogs/MobileSyncHarness_Debug.log" />
			<param name="AppendToFile" value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%date [%-5level] [%logger] - %message%newline" />
			</layout>
		</appender>

		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
			<layout type="log4net.Layout.PatternLayout">	
				<param name="ConversionPattern" value="%date [%-5level] [%logger] - %message%newline" />
			</layout>
		</appender>

		<root>
			<level value="DEBUG"/>  <!-- Log Levels: DEBUG > INFO > WARN > ERROR -->
			<appender-ref ref="ConsoleAppender" />
			<!--  <appender-ref ref="LogFileAppender" />  Uncomment this line on the Automation Clients to enable test logging -->
			<appender-ref ref="DebugFileAppender" />  <!-- Comment out this line on the Automation Clients to disable development logging -->
		</root>

	</log4net>

</configuration>
