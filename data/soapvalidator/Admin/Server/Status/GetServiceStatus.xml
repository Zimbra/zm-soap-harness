<t:tests xmlns:t="urn:zimbraTestHarness">

<t:property name="test_account1.name" value="test${TIME}${COUNTER}@${defaultdomain.name}"/>

<t:property name="server.zimbraAdmin" value="${zimbraServer.name}"/>

<t:test_case testcaseid="Ping" type="always">
    <t:objective>Basic system check</t:objective>

    <t:test required="true">
        <t:request>
            <PingRequest xmlns="urn:zimbraAdmin"/>
        </t:request>
        <t:response>
            <t:select path="//admin:PingResponse"/>
        </t:response>
    </t:test>

</t:test_case>


<t:test_case testcaseid="GetServiceStatus_01" type="bhr" areas="nonappliance">
    <t:objective>Get Service Status Information</t:objective>
    <t:steps>
        1. Login into Admin
        2. GetServiceStatusRequest    
    </t:steps>
    
    <t:test id="getVersionInfo01a">
        <t:request>
            <AuthRequest xmlns="urn:zimbraAdmin">
                <name>${admin.user}</name>
                <password>${admin.password}</password>
            </AuthRequest>
        </t:request>
        <t:response>
            <t:select path="//admin:AuthResponse/admin:authToken" set="authToken"/>
            <t:select path="//admin:AuthResponse/admin:authToken" set="admin.authToken"/>
        </t:response>
    </t:test>

    <t:test depends="getVersionInfo01a">
        <t:request>
            <GetServiceStatusRequest xmlns="urn:zimbraAdmin"/>
        </t:request>
        <t:response>
            <t:select path="//admin:GetServiceStatusResponse"/>
        </t:response>
    </t:test>  

</t:test_case>

<t:test_case testcaseid="GetServiceStatus_02" type="functional" bugids="10651" areas="nonappliance">
    <t:objective>Get Service Status Information</t:objective>
    <t:steps>
        1. Login into Admin
        2. GetServiceStatusRequest    
    </t:steps>
    
    <t:test id="getVersionInfo01a">
        <t:request>
            <AuthRequest xmlns="urn:zimbraAdmin">
                <name>${admin.user}</name>
                <password>${admin.password}</password>
            </AuthRequest>
        </t:request>
        <t:response>
            <t:select path="//admin:AuthResponse/admin:authToken" set="authToken"/>
            <t:select path="//admin:AuthResponse/admin:authToken" set="admin.authToken"/>
        </t:response>
    </t:test>

    <t:test depends="getVersionInfo01a">
        <t:request>
            <GetServiceStatusRequest xmlns="urn:zimbraAdmin"/>
        </t:request>
        <t:response>
            <t:select path="//admin:GetServiceStatusResponse/admin:status"/>
        </t:response>
    </t:test>  

</t:test_case>

</t:tests>
