<t:tests xmlns:t="urn:zimbraTestHarness">
<t:property name="server.zimbraAdmin" value="${zimbraServer.name}"/>

<t:property name="account1.name" value="lmtp${TIME}.${COUNTER}@${defaultdomain.name}"/>
<t:property name="account1.password" value="${defaultpassword.value}"/>

<t:property name="root" value="${soapxml.root}/Mail/LMTP/Domino"/>

<t:property name="msg01.file" value="${root}/domino-mail-basic.txt"/>
<t:property name="msg02.file" value="${root}/domino-mail-attachment.txt"/>
<t:property name="msg03.file" value="${root}/domino-mail-image.txt"/>
<t:property name="msg04.file" value="${root}/domino-mail-htmlattach.txt"/>

<t:property name="subject1.valid" value="Domino Basic"/>
<t:property name="subject2.valid" value="Domino Attachment"/>
<t:property name="subject3.valid" value="Domino Image"/>
<t:property name="subject4.valid" value="Domino HTML"/>

<t:property name="attachment1.type" value="application/msword"/>
<t:property name="attachment1.name" value="bug4.doc"/>
<t:property name="attachment2.type" value="image/jpeg"/>
<t:property name="attachment2.name" value="634.jpg"/>
<t:property name="attachment3.type" value="text/html"/>
<t:property name="attachment3.name" value="index.html"/>

<t:property name="test_acct1.server" value="NOT_DEFINED"/>    

<t:test_case testcaseid="Ping" type="always">
    <t:objective>Basic system check</t:objective>
    
    <t:test id="ping">
        <t:request>
            <PingRequest xmlns="urn:zimbraAdmin"/>
        </t:request>
        <t:response>
            <t:select path="//admin:PingResponse"/>
        </t:response>
    </t:test>
    
</t:test_case>


<t:test_case testcaseid="acctSetup1_Domino_MIMEBasic" type="always">
    <t:objective>Create test account</t:objective>
    <t:steps>1. Login to admin.
                  2. Create a test account.       
    </t:steps>
    
    <t:test id="admin_login" required="true" depends="ping">
        <t:request>
            <AuthRequest xmlns="urn:zimbraAdmin">
                <name>${admin.user}</name>
                <password>${admin.password}</password>
            </AuthRequest>
        </t:request>
        <t:response>
            <t:select path="//admin:AuthResponse/admin:authToken" set="authToken"/>
        </t:response>
    </t:test>
    
    <t:test id="create_test_account1" required="true" depends="admin_login">
        <t:request>
            <CreateAccountRequest xmlns="urn:zimbraAdmin">
                <name>${account1.name}</name>
                <password>${account1.password}</password>
            </CreateAccountRequest>
        </t:request>
        <t:response>
            <t:select path="//admin:CreateAccountResponse/admin:account" attr="id" set="account1.id"/>
            <t:select path='//admin:CreateAccountResponse/admin:account/admin:a[@n="zimbraMailHost"]' set="test_acct1.server"/>
        </t:response>
    </t:test>

</t:test_case>
    
<t:property name="server.zimbraAccount" value="${test_acct1.server}"/>

<t:test_case testcaseid="acctSetup2_Domino_MIMEBasic" type="always">
    <t:objective>Login to the test account </t:objective>

    <t:test required="true">
        <t:request>
            <AuthRequest xmlns="urn:zimbraAccount">
                <account by="name">${account1.name}</account>
                <password>${account1.password}</password>
            </AuthRequest>
        </t:request>
        <t:response>
            <t:select path="//acct:AuthResponse/acct:lifetime" match="^\d+$"/>
            <t:select path="//acct:AuthResponse/acct:authToken" set="authToken"/>

        </t:response>
    </t:test>

</t:test_case>


<t:test_case testcaseid="lmtp_Domino_MIMEBasic1" type="bhr">
    <t:objective>Verify a MIME message in text format from a Domino Account</t:objective>
    <t:steps>
        1. Upload a message
        2. Login to account
        3. Search the message
        4. Get the message
    </t:steps>

    <t:mailinjecttest>
        <t:lmtpInjectRequest>
            <filename>${msg01.file}</filename>
            <to>${account1.name}</to>
            <from>${nonZimbraUser.name}</from>
            <server>${test_acct1.server}</server>
		</t:lmtpInjectRequest>
    </t:mailinjecttest>    

    <t:test id="lmtp_Domino_MIMEBasic1a">
        <t:request>
            <SearchRequest xmlns="urn:zimbraMail" types="message">
                <query>subject:(${subject1.valid})</query>
            </SearchRequest>
        </t:request>
        <t:response>
            <t:select path="//mail:SearchResponse/mail:m" attr="id" set="msg1.id"/>
        </t:response>
    </t:test>
    
    <t:test depends="lmtp_Domino_MIMEBasic1a">
        <t:request>
            <GetMsgRequest xmlns="urn:zimbraMail">
                <m id="${msg1.id}"/>
            </GetMsgRequest>
        </t:request>
        <t:response>
            <t:select path="//mail:GetMsgResponse/mail:m[@id='${msg1.id}']">
            	<t:select attr="sd" match="1164363328000"/>
				<t:select path="//mail:e[@t='f']" attr="a" match="admin/pspl%TEST@persistent.co.in"/> 
            	<t:select path="//mail:e[@t='t']" attr="a" match="test@liquidsys.zimbraqa.com"/>
            	<t:select path="//mail:m/mail:mp" attr="ct" match="multipart/alternative"/>
            	<t:select path="//mail:mp[@ct='text/plain']" attr="content" match="(?s)This is a basic test mail from Domino and timezone \(\+10:00\)Hobart dated .24th November 2006\..*"/>
            </t:select>
        </t:response>
    </t:test> 

    <t:test depends="lmtp_Domino_MIMEBasic1a">
        <t:request>
            <GetMsgRequest xmlns="urn:zimbraMail">
                <m id="${msg1.id}" html="1"/>
            </GetMsgRequest>
        </t:request>
        <t:response>
            <t:select path="//mail:GetMsgResponse/mail:m[@id='${msg1.id}']">
            <t:select path="//mail:mp[@ct='text/html']" attr="content" match="(?s).*This is a basic test mail from Domino.and timezone \(\&amp;#43;10:00\)Hobart dated 24th November 2006\..*"/>
            </t:select>
        </t:response>
    </t:test> 

</t:test_case>


