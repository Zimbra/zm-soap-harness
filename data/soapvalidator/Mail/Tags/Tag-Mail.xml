<t:test_case testcaseid="mail_TagActionRequest5" type="functional">
    <t:objective>Tagging a email </t:objective>
    <t:steps> 
               1. Add a email.  
               2. Create a new tag;
               3. Tag the email with invalid attibutes; 
    </t:steps>

    <t:test>
        <t:request>
	        <AddMsgRequest xmlns="urn:zimbraMail">
		        <m l="${folder.inbox}">   
		        <content>Subject: hello1
do it
    		    </content></m>
	        </AddMsgRequest>
        </t:request>
        <t:response>
	        <t:select path="//mail:AddMsgResponse/mail:m" attr="id" set="message1.id"/>
        </t:response>
    </t:test>

    <t:test >
        <t:request>
            <CreateTagRequest xmlns="urn:zimbraMail">
	            <tag name="${tag6.name}" color="${tag.color.default}"/>
            </CreateTagRequest>
        </t:request>
        <t:response>
            <t:select path="//mail:CreateTagResponse/mail:tag">
	        <t:select attr="id" set="tag.id"/>
	        <t:select attr="color" match="${tag.color.default}"/>
            </t:select>
        </t:response>
    </t:test>

    <!-- missing action -->
    <t:test >
        <t:request>
            <MsgActionRequest  xmlns="urn:zimbraMail">
                 
            </MsgActionRequest >
        </t:request>
        <t:response>
            <t:select path="//zimbra:Code" match = "service.INVALID_REQUEST"/>
        </t:response>
    </t:test>
    
    <!-- missing op and tag attribute -->
    <t:test >
        <t:request>
            <MsgActionRequest  xmlns="urn:zimbraMail">
                <action id="${message1.id}" />
            </MsgActionRequest >
        </t:request>
        <t:response>
            <t:select path="//zimbra:Code" match = "service.INVALID_REQUEST"/>
        </t:response>
    </t:test>
    
    <!-- missing tag attribute -->
    <t:test >
        <t:request>
            <MsgActionRequest  xmlns="urn:zimbraMail">
                <action id="${message1.id}" op="${op.tag}" />
            </MsgActionRequest >
        </t:request>
        <t:response>
            <t:select path="//zimbra:Code" match = "service.INVALID_REQUEST"/>
        </t:response>
    </t:test>
    
    <!-- missing id attribute -->
    <t:test >
        <t:request>
            <MsgActionRequest  xmlns="urn:zimbraMail">
                <action op="${op.tag}" tag="${tag.id}"/>
            </MsgActionRequest >
        </t:request>
        <t:response>
            <t:select path="//zimbra:Code" match = "service.INVALID_REQUEST"/>
        </t:response>
    </t:test>
    
</t:test_case>


