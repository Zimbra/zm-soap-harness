    </t:test>

    <t:test required="true">
        <t:request>
			<DeleteIdentityRequest xmlns="urn:zimbraAccount">
				<identity name="${negative}"/>
			</DeleteIdentityRequest>
        </t:request>
        <t:response>
			<t:select path="//zimbra:Code"  match="^account.NO_SUCH_IDENTITY$"/>
		</t:response>
    </t:test>

    <t:test required="true">
        <t:request>
			<DeleteIdentityRequest xmlns="urn:zimbraAccount">
				<identity name="${zero}"/>
			</DeleteIdentityRequest>
        </t:request>
        <t:response>
			<t:select path="//zimbra:Code"  match="^account.NO_SUCH_IDENTITY$"/>
		</t:response>
    </t:test>

    <t:test required="true">
        <t:request>
			<DeleteIdentityRequest xmlns="urn:zimbraAccount">
				<identity name="${largenumber}"/>
			</DeleteIdentityRequest>
        </t:request>
       <t:response>
			<t:select path="//zimbra:Code"  match="^account.NO_SUCH_IDENTITY$"/>
		</t:response>
    </t:test>

</t:test_case>

</t:tests>