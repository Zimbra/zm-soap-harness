        </t:response>
    </t:test>
    
    <t:test>
		<t:request>
			<AutoCompleteRequest xmlns="urn:zimbraMail"> 
				<name>${contact1.nickname}</name>
			</AutoCompleteRequest>
		</t:request>
		<t:response>
