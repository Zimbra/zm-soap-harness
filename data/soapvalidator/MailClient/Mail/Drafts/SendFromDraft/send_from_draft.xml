    <t:test>
        <t:request>
            <SendMsgRequest xmlns="urn:zimbraMail">
                <m>
                    <e t="t" a='${test_account2.name}'/>
                    <su> ${message.subject2} </su>
                    <mp ct="text/plain">
                        <content> ${message.content2}</content>
                    </mp>
                </m>
            </SendMsgRequest>
        </t:request>
        <t:response>
