<t:property name="msg02.file" value="${root}/lmtp_from_missing.txt"/>
<t:property name="msg03.file" value="${root}/lmtp_subject_missing.txt"/>
<t:property name="msg04.file" value="${root}/lmtp_MIMEversion_missing.txt"/>
