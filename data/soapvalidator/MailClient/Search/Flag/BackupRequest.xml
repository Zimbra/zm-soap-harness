    </t:test>

     <t:test>
        <t:request>
            <SendMsgRequest xmlns="urn:zimbraMail">
                <m>
                    <e t="t" a="${account1.name}"/>
                    <su>${msg01.subject}</su>
                    <mp ct="text/plain">
                        <content>${message_content}</content>
                    </mp>
                </m>
            </SendMsgRequest>
        </t:request>
        <t:response>
