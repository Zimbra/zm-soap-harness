<t:tests xmlns:t="urn:zimbraTestHarness">

<t:property name="test_account1.name" value="FROMUSER${TIME}.${COUNTER}@${defaultdomain.name}"/>
<t:property name="test_account2.name" value="TOUSER${TIME}.${COUNTER}@${defaultdomain.name}"/>
