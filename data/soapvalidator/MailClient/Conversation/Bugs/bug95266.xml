                    <su> Fwd: ${message.subject}</su>
                    <mp ct="text/plain">
                        <content> $ Forwarded content : {message.content}</content>
                    </mp>
                </m>
            </SendMsgRequest>
        </t:request>
        <t:response>
            <t:select path="//mail:SendMsgResponse/mail:m" attr="id" set="message.id1"/>
