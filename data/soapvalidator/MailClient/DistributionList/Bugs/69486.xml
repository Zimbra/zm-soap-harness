<t:property name="account1.dl2.name" value="dl2.${TIME}.${COUNTER}@${defaultdomain.name}"/>
<t:property name="account1.dl2.newname" value="newdl2.${TIME}.${COUNTER}@${defaultdomain.name}"/>
