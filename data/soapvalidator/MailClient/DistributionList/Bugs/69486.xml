<t:property name="account1.dl4.name" value="dl4.${TIME}.${COUNTER}@${defaultdomain.name}"/>
<t:property name="account1.dl4.newname" value="newdl4.${TIME}.${COUNTER}@${defaultdomain.name}"/>
