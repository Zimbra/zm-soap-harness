					<query>before:${negative.date}</query>
                </SearchRequest>
            </t:request>
            <t:response>
                <t:select path= "//zimbra:Code" match="^mail.QUERY_PARSE_ERROR"/>
            </t:response>
        </t:test>
        
    </t:test_case>


