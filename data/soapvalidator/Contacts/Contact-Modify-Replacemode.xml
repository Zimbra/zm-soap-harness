        <t:response>
            <t:select path = "//mail:CreateContactResponse/mail:cn">
            <t:select attr = "id" set = "contact2.id"/>            
            </t:select>
        </t:response>
    </t:test>
    
    <t:test>
        <t:request>
            <ModifyContactRequest xmlns = "urn:zimbraMail" replace="0">
