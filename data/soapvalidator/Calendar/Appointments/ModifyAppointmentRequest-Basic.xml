				<query>inid:${account1.calendar.folder.id}</query>
			</SearchRequest>
        </t:request>
        <t:response>      
            <t:select path="//mail:SearchResponse">
            	<t:select path="//mail:appt[@invId='${appt2.invId}']"/>
            	<t:select path="//mail:appt[@name='${appointment2.newsubject}']"/>
            </t:select>
        </t:response>
    </t:test>

</t:test_case>


</t:tests>
