			<GrantPermissionRequest xmlns="urn:zimbraMail" >
				<ace right="invite" gt="pub" deny="1"/>
			</GrantPermissionRequest>
		</t:request>
		<t:response>
			<t:select path="//mail:GrantPermissionResponse"/>
